<div class="margin">
  <h3 class="muted">Code examples for <strong><%= @tag %></strong></h3>
</div>

<% @repos.each do |repo| %>
  <div class="repo-wrapper thumbnail">
    <div class="content">

      <div class="details pull-left">
        <img src="<%= repo.avatar_url %>" class="img-rounded pull-left">
        <div class="text">
          <h4>
            <%= link_to repo.fullname, repo.repo_url, target: repo.fullname %>
          </h4>
          <p><%= repo.description %></p>
        </div>
      </div>

      <div class="tags pull-right">
        <p class="muted">This project uses:</p>
        <% repo.tags.each do |t| %>
          <%= link_to t, github_path(user: t.user, repo: t.repo), class: 'thumbnail tag' %>
        <% end %>
      </div>

      <div class="clearfix"></div>
    </div>
    <div class="languages">
      <% unless repo.tags.empty? %>
        <%= repo.languages.join ', ' %>
      <% end %>
    </div>

  </div>
<% end %>
