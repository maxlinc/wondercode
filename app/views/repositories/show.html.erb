<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @repository.name %>
</p>

<p>
  <strong>Url:</strong>
  <%= @repository.repo_url %>
</p>

<div id= <%="tags#{@repository.id}"%> class='hidden'/>
    <%= form_tag(controller: 'tags', action: 'add') do %>
      <%= text_field_tag :new_tag %>
    <%= hidden_field_tag(:repository, @repository.id) %>
    <%= submit_tag "Add" %>
    <% end %>
</div>

<%= link_to 'Edit', edit_repository_path(@repository) %> |
<%= link_to 'Back', repositories_path %>
